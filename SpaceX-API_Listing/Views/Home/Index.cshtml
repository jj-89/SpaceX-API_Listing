        $("#grid").kendoGrid({
            dataSource:{
                type: "jsonp",
                transport: {
                    read:"https://api.spacexdata.com/v3/launches"
                },
                pageSize: 10,

            },
            pageable: true,
            height: 550,
            filterable: true,
            sortable: true,
            pageable: true,
            columnMenu: true,
            columns: [
                { field: "flight_number", title: "Flight Number" },
                { field: "mission_name", title: "Mission Name" },
                { field: "rocket.rocket_name", title: "Rocket Name" },
                { field: "launch_date_local", title: "Launch Date", format: "{0:MM/dd/yyyy}" },
                { field: "launch_success", title: "Success" },
                { field: "second_stage", title: "Cargo Manifest"}
            ],

        });
    });
</script>
